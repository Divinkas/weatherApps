<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@color/colorLightGray_"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_open"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title_places"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/test_places"
            android:textColor="@color/colorGray_"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="0dp"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageView
        android:id="@+id/delete_places"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/desc_close"
        android:src="@drawable/close"
        android:layout_weight="8"/>

</LinearLayout>